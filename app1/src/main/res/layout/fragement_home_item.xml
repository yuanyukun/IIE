<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60dp">
        <com.horem.parachute.customview.CustomHeadView
            android:id="@+id/home_fragment_user_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/height_20dp"
            android:src="@mipmap/circle_dark"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/home_fragment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_marginLeft="@dimen/height_10dp"
            android:text="user_name"
            android:layout_toRightOf="@+id/home_fragment_user_head"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/home_fragment_balloon_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_fragment_user_name"
            android:layout_below="@+id/home_fragment_user_name"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="create_time"
            android:textColor="@color/text_grey"/>
        <TextView
            android:id="@+id/home_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/height_10dp"
            android:paddingBottom="@dimen/height_5dp"
            android:paddingTop="@dimen/height_5dp"
            android:textColor="@color/material_blue"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_blue_stroke_three"
            android:layout_marginRight="@dimen/height_20dp"
            android:layout_centerVertical="true"
            android:text="关注"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/home_fragment_balloon_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_20dp"
        android:layout_marginTop="@dimen/height_5dp"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/height_20dp" />

    <com.horem.parachute.customview.CustomVideoView
        android:id="@+id/home_fragment_custom_video_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/height_20dp"
        android:layout_marginTop="@dimen/height_10dp"/>

    <TextView
        android:id="@+id/home_fragment_balloon_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/height_20dp"
        android:layout_marginBottom="@dimen/height_5dp"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/text_grey"/>

    </LinearLayout>
    <View
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/home_fragment_on_flowers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gray_flowers_32"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_5dp"/>
            <TextView
                android:id="@+id/home_fragment_balloon_flower_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_grey"/>
        </LinearLayout>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#999999"
            android:layout_marginTop="10dp"
            android:alpha="0.3"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/home_fragment_on_camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gray_camera_32"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_5dp"/>
            <TextView
                android:id="@+id/home_fragment_balloon_camera_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_grey"/>

        </LinearLayout>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#999999"
            android:layout_marginTop="10dp"
            android:alpha="0.3"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" >
            <com.horem.parachute.customview.CustomLoveBtn
                android:id="@+id/home_fragment_balloon_custom_like_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.horem.parachute.customview.CustomLoveBtn>

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/divider_line_horizontal"/>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/height_20dp"
        android:background="@color/grey_bg"/>
</LinearLayout>
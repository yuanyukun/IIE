<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_circle"
        android:paddingBottom="@dimen/height_5dp"
        android:paddingTop="@dimen/height_5dp">

        <ImageView
            android:id="@+id/credit_card_image"
            android:layout_width="@dimen/width_40dp"
            android:layout_height="@dimen/height_48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width_12dp"
            android:background="#cc0000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/credit_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招商银行"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/credit_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/credit_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/width_12dp"
                android:text="**** **** **** 1234"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/height_20dp"
    android:paddingRight="@dimen/height_20dp">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_60dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money_introduce"
        android:text="111"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_createtime"
        android:layout_below="@+id/money_introduce"
        android:text="222"
        android:textColor="@color/text_grey"
        android:layout_marginTop="@dimen/height_5dp"/>
    <TextView
        android:id="@+id/money_costs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="333"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        style="@style/divider_line_horizontal"
        android:layout_below="@+id/task_createtime"
        android:layout_marginTop="@dimen/height_10dp"/>
</LinearLayout>
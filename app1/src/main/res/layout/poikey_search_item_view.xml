<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/poi_key_search_item_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/height_5dp"
        android:layout_marginLeft="@dimen/height_20dp"/>
    <TextView
        android:id="@+id/poi_key_search_item_txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/poi_key_search_item_txt_title"
        android:layout_alignLeft="@+id/poi_key_search_item_txt_title"/>
    <View
        style="@style/divider_line_horizontal"
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_alignLeft="@+id/poi_key_search_item_txt_details"
        android:layout_below="@+id/poi_key_search_item_txt_details"/>
</RelativeLayout>
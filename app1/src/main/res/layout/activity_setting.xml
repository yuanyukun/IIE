<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_bg">

    <!--***************************************-->
    <View
        android:layout_marginTop="30dp"
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:id="@+id/settings_ll_safety"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="账户安全"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow" />
    </LinearLayout>
    <View
        android:layout_marginLeft="17dp"
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:id="@+id/settings_ll_black_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="黑名单"
            android:textSize="14sp"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow" />
    </LinearLayout>
    <View
        android:layout_marginLeft="17dp"
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:id="@+id/settings_ll_download"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="下载提醒"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow" />
    </LinearLayout>
    <View
        android:layout_marginLeft="17dp"
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:id="@+id/settings_ll_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="清除缓存"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey"/>
        <ImageView
            android:id="@+id/mark"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow" />
    </LinearLayout>
    <View
        android:layout_marginLeft="0dp"
        style="@style/divider_line_horizontal"/>
    <View
        android:layout_marginTop="@dimen/height_20dp"
        android:layout_marginLeft="0dp"
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:id="@+id/settings_ll_user_advices"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="意见反馈"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow" />
    </LinearLayout>
    <View
        android:layout_marginLeft="17dp"
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:id="@+id/settings_ll_about_parachute"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="关于伞来了"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow" />
    </LinearLayout>
    <View
        style="@style/divider_line_horizontal"/>




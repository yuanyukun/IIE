<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/grey_bg"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_width="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_home_tips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        tools:context="com.horem.parachute.mine.HomeTipsActivity">
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/home_tips_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/height_60dp"
        android:layout_height="@dimen/height_60dp"
        android:src="@mipmap/tab_add_75"
        android:scaleType="center"
        android:background="@drawable/circl_eview"/>
</LinearLayout>


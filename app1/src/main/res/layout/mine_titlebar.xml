<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/tmp_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/header_color">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/user_48"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/user_info_red_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/dot"
                android:visibility="invisible"
                android:layout_alignRight="@+id/title_back"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
             <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/title_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/nearby_fragment_red_dot"
            android:textColor="@color/white"
            android:drawableRight="@mipmap/user_48" />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/nearby_fragment_red_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@mipmap/dot"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height_10dp"
                android:layout_marginTop="@dimen/height_10dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="描述"
            android:textSize="14sp"
            android:id="@+id/send_task_depict"/>
        <LinearLayout
            android:id="@+id/send_task_imglist_container"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <TextView
            android:id="@+id/send_task_address"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/addressColor"
            android:textSize="12sp"
            android:text="地址"/>
        <TextView
            android:id="@+id/send_task_create_time"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/send_task_image"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/width_40dp"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/balloon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/height_20dp"
        android:paddingRight="@dimen/height_20dp"
        android:paddingTop="@dimen/height_5dp"
        android:paddingBottom="@dimen/height_5dp"
        android:orientation="vertical">

    </LinearLayout>
    <View style="@style/divider_line_horizontal" />
        <LinearLayout
            android:id="@+id/task_send_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:background="@color/white"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/task_send_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收到1份照片"
                android:visibility="invisible"
                android:textColor="@color/material_blue"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10dp"
        android:background="@null"/>

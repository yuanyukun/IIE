<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/balloon_info_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/balloon_info_timeout_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/height_20dp"/>
        <TextView
            android:id="@+id/balloon_info_timeout_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/height_20dp"/>
    </LinearLayout>
    <com.amap.api.maps.TextureMapView
        android:id="@+id/balloon_map"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/gray">

    </com.amap.api.maps.TextureMapView>
    <LinearLayout
        android:id="@+id/balloon_home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical">

        <com.horem.parachute.customview.CustomVideoView
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.horem.parachute.customview.CustomVideoView>
        <TextView
            android:id="@+id/home_fragment_balloon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_20dp"

            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginRight="@dimen/height_20dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/addressColor"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60dp">
        <com.horem.parachute.customview.CustomHeadView
            android:layout_marginTop="@dimen/height_10dp"
            android:id="@+id/home_fragment_user_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/height_20dp"
            android:src="@mipmap/circle_dark"/>
        <TextView
            android:id="@+id/home_fragment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10dp"
            android:textSize="16sp"
            android:text="user_name"
            android:layout_marginLeft="@dimen/height_10dp"
            android:layout_toRightOf="@+id/home_fragment_user_head"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/home_fragment_balloon_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_fragment_user_name"
            android:layout_alignLeft="@+id/home_fragment_user_name"
            android:textSize="14sp"
            android:text="create_time"
            android:textColor="@color/text_grey"/>
        <TextView
            android:id="@+id/home_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/height_10dp"
            android:paddingBottom="@dimen/height_5dp"
            android:paddingTop="@dimen/height_5dp"
            android:textColor="@color/material_blue"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_blue_stroke_three"
            android:layout_marginRight="@dimen/height_20dp"
            android:layout_centerVertical="true"
            android:text="关注"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/home_fragment_balloon_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_20dp"
        android:layout_marginTop="@dimen/height_5dp"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/height_10dp"
        android:layout_marginRight="@dimen/height_20dp" />
    <View
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/home_fragment_on_flowers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gray_flowers_32"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_5dp"/>
            <TextView
                android:id="@+id/home_fragment_balloon_flower_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_grey"/>
        </LinearLayout>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#999999"
            android:layout_marginTop="10dp"
            android:alpha="0.3"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/home_fragment_on_camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gray_camera_32"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_5dp"/>
            <TextView
                android:id="@+id/home_fragment_balloon_camera_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_grey"/>

        </LinearLayout>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#999999"
            android:layout_marginTop="10dp"
            android:alpha="0.3"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" >
            <com.horem.parachute.customview.CustomLoveBtn
                android:id="@+id/home_fragment_balloon_custom_love_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.horem.parachute.customview.CustomLoveBtn>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider_line_horizontal"
        style="@style/divider_line_horizontal"
        android:layout_height="@dimen/height_20dp"
        android:background="@color/color_999"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/balloon_info_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
</ScrollView>
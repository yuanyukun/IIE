<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/mark"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_toRightOf="@+id/mark"
        android:background="@drawable/linearlayout_shape_white_corner_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_shape_white_corner_5"
            android:paddingTop="@dimen/height_10dp"
            android:paddingLeft="@dimen/height_20dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/task_info_head_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/dark_icon" />

            <TextView
                android:id="@+id/tv_task_info_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="007"
                android:layout_marginLeft="@dimen/height_10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_task_info_care_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue_stroke_three"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/height_20dp"
                android:padding="@dimen/height_5dp"
                android:text="关注"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/click_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/height_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111"
                android:layout_marginLeft="@dimen/height_10dp"
                android:textColor="@color/color_e64"
                android:textSize="12sp"
                android:id="@+id/tv_task_over_time" />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_task_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="@dimen/height_5dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/height_10dp"
                    android:layout_marginTop="@dimen/height_5dp"
                    android:text="伞况描述mdfnaldmfnamdfnlajfn"/>
                <!--<ImageView-->
                    <!--android:id="@+id/tv_app_user_info_detail"-->
                    <!--android:layout_width="25dp"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:src="@mipmap/information_60"-->
                    <!--android:layout_marginRight="@dimen/height_20dp"-->
                    <!--android:layout_marginBottom="@dimen/height_60dp"/>-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_show_distance"
                android:layout_width="240dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:layout_marginLeft="@dimen/height_10dp"
                android:layout_marginTop="@dimen/height_5dp"
                android:layout_marginRight="@dimen/height_5dp"
                android:layout_marginBottom="60dp"
                android:singleLine="true" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:layout_marginLeft="@dimen/height_10dp"
        android:layout_marginRight="@dimen/height_10dp"
        android:layout_marginBottom="@dimen/height_10dp"
        android:background="@drawable/linearlayout_shape_green_corner_5">
        <TextView
            android:id="@+id/task_type"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/height_5dp"
            android:layout_marginRight="@dimen/height_10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="拍照片" />
        <TextView
            android:id="@+id/tv_user_info_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_dark"
            android:text="￥1.06"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/height_10dp"/>
    </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/right_blank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_alignBottom="@+id/linearLayout"
        android:visibility="gone"/>

</RelativeLayout>
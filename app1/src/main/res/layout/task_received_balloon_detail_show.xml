<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/height_20dp"
        android:layout_marginRight="@dimen/height_20dp"
        android:layout_marginBottom="@dimen/height_10dp"
        android:background="@color/grey_bg"
        android:layout_gravity="center_vertical">
        <RelativeLayout
            android:layout_width="@dimen/height_60dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_view_balloon_container_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/image_view_balloon_container_start"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/start"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/height_10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_balloon_container_address"
                android:textColor="@color/addressColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/height_10dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_balloon_container_create_time"
                android:text="22222"
                android:layout_marginTop="@dimen/height_5dp"
                android:textColor="@color/text_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_func_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">


    <LinearLayout
        android:id="@+id/top_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/height_10dp"
        android:background="@drawable/circle_corner_linearlayout_white"
        android:orientation="vertical">
            <TextView
                android:id="@+id/popup_func_photo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="投照片伞"
                android:textSize="16sp"
                android:gravity="center"
                android:clickable="true"
                android:textColor="#9B30FF"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:alpha="0.3"
            android:background="#333333"/>


            <TextView
                android:id="@+id/popup_func_video"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="投视频伞"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="#9B30FF"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/height_10dp"
            android:layout_marginTop="@dimen/height_10dp"
            android:gravity="center"
            android:background="@drawable/circle_corner_linearlayout_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popup_func_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="#9B30FF"/>
        </LinearLayout>




</LinearLayout>
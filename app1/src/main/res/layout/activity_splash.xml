<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B9DFF"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/splash_img_mark"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/logo_120"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_60dp"/>
    <TextView
        android:id="@+id/splash_tv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="即时看世界"
        android:layout_below="@+id/splash_img_mark"
        android:layout_marginTop="@dimen/height_20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="See The World Now"
        android:layout_below="@+id/splash_tv_mark"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:text="Copyright 2016 Horem.All Rights Reserved"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_20dp"
        />
</RelativeLayout>